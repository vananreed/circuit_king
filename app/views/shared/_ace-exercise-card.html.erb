
<div class="ace-exercise-card">
  <div><%= exercise[:name] %></div>
  <div><%= exercise[:description] %></div> <!-- need to scrape better description. -->
  <div>Difficulty: <%= exercise[:difficulty] %></div>
  <div><%= image_tag exercise[:image] %></div>
  <%= link_to "Add Exercise", exercises_path(exercise: {name: exercise[:name], description: exercise[:description], difficulty: exercise[:difficulty]}), method: :post %> |
  <a href="<%= exercise[:link] %>">Details</a>
</div>

